<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon_animation"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/story"
        android:layout_width="480dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:alpha="0.0"
        android:background="@drawable/table"
        android:fontFamily="@font/remarregular"
        android:gravity="center"
        android:text="         О нет! На вас напал маньяк. Он хочет чтобы вы помогли ему \n сделать дз его ребенка и ответили на его вопросы, тогда он отпустит\n вас домой."
        android:textColor="@color/black"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>



    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/duck"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/walk"
        app:layout_constraintBottom_toTopOf="@+id/back"
        app:layout_constraintStart_toStartOf="parent">

    </pl.droidsonroids.gif.GifImageView>


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/maniac"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="35dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.0"
        android:background="@drawable/killer"
        app:layout_constraintBottom_toTopOf="@id/Continue"
        app:layout_constraintEnd_toEndOf="parent">

    </pl.droidsonroids.gif.GifImageView>

    <TextView
        android:padding="10dp"
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/remarregular"
        android:text="@string/Back"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </TextView>

    <TextView
        android:padding="10dp"
        android:id="@+id/Continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/remarregular"
        android:text="@string/Continue"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>